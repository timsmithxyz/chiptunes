<div class="header">
  <div class="navbar-fixed">
    <%= render :partial => 'layouts/html_header' %>
  </div>
</div>

<div class="song">
  <div class="container">
    <div class="row">
      <div class="col s12">
        <div class="card large">
          <div class="card-image waves-effect waves-block waves-light">
            <%= link_to image_tag(@song.game.image), game_path(@song.game) %>
            <span class="card-title">
              <%= @song.name %>
            </span>
          </div>
          
          <div class="card-content">
            <p>from <%= link_to @song.game.name, game_path(@song.game) %></p>
            <br>
            <audio controls autoplay>
              <source src= <%= @song.audio %> type="audio/mp3">
            </audio>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>